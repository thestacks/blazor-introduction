@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Filled._1xMobiledata" OnClick="() => IncrementCount(1)">Click me</MudButton>
<MudButton Variant="Variant.Filled" Color="Color.Secondary" EndIcon="@Icons.Filled._5kPlus" OnClick="() => IncrementCount(5000)">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount(int amount)
    {
        currentCount += amount;
    }
}
